<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="MyTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@drawable/bot_border</item>
        <item name="android:showDividers">beginning</item>
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorTexto</item>
    </style>
    
    
    <style name="CustomDialogTheme" parent="@android:style/Theme.Dialog">
	    <item name="android:bottomBright">@color/azulBarraTitulo</item>
	    <item name="android:bottomDark">@color/azulBarraTitulo</item>
	    <item name="android:bottomMedium">@color/azulBarraTitulo</item>
	    <item name="android:centerBright">@color/azulBarraTitulo</item>
	    <item name="android:centerDark">@color/azulBarraTitulo</item>
	    <item name="android:centerMedium">@color/azulBarraTitulo</item>
	    <item name="android:fullBright">@color/colorTexto</item>
	    <item name="android:fullDark">@color/azulTransparente</item>
	    <item name="android:topBright">@color/azulOscuro</item>
	    <item name="android:topDark">@color/azulBotonClaro</item>
	</style>
</resources>