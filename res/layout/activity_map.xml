<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapActivity" >

    <org.mapsforge.android.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" >

    </org.mapsforge.android.maps.MapView>

    <LinearLayout
        android:id="@+id/leftMenuBarRoute"
        android:layout_width="82dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/back_noborder"
        android:orientation="vertical" >

    </LinearLayout>

    <Button
        android:id="@+id/buttonNextPoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Siguiente punto" />

    <Button
        android:id="@+id/buttonQuitRoute"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/buttonPrevPoi"
        android:layout_below="@+id/buttonPrevPoi"
        android:text="Salir de ruta" />

    <Button
        android:id="@+id/buttonPrevPoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/buttonNextPoi"
        android:layout_below="@+id/buttonNextPoi"
        android:text="Punto anterior" />

    <ImageButton
        android:id="@+id/gotoRouteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="12dp"
        android:src="@android:drawable/ic_menu_mylocation" />

    <Gallery
        android:id="@+id/selectedPOIgallery"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/imageButton1"
        android:layout_toRightOf="@+id/leftMenuBarRoute"
        android:spacing="16dp"
        android:gravity="center_vertical" />

</RelativeLayout>